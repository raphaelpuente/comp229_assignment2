<%- include partials/header.ejs %>
<%- include partials/main_nav.ejs %>



<!-- Home Page --> 
<main>
  <body style="background-color:#FFD85C;"><br><br><br>
  <% if(messages.length > 0) {%>
    <div class="alert alert-danger">
      <%= messages %>  
    </div>
  <% } %>
    <div class="container">
      <div class="row">
        <div class="col-sm">
            <h1 class="display-2">Hello!</h1>
            <br>
            <h1 class="display-4">Please sign in <br> to enjoy all of <br> our benefits!</h1>
        </div>                   
        <div class="col-sm">
          <div class="jumbotron bg-dark text-white">
            <img src="./Assets/images/logo.png" alt="" style="width: 20%; float: right;">
            <br><br><br><br><br><br>
            <form method="POST" autocomplete="off">
              <fieldset class="form-group">
                <label for="username">Username</label>
                <input type="text" class="form-control"
                name="username" placeholder="Enter a username"
                id="username" required autofocus>
              </fieldset>

              <fieldset class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" 
                name="password" placeholder="Enter a password"
                id="password" required>
                or
                <a href="/register">Register here!</a>
              </fieldset>
              
              <fieldset class="form-group text-right">
                <input type="submit" class="btn btn-success" value="Login">
                <a href="/" class="btn btn-warning">
                  <input type="button" class="btn btn-warning" value="Cancel">                
                </a>
              </fieldset>
            </form><br><br>
          </div>
        </div>
      </div>
    </div>
  </body>
</main>




  <%- include partials/bottom_nav.ejs %>
  <%- include partials/footer.ejs %>